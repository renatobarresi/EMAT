#include "rtos_module.h"

/* Constructor */
rtosTask::rtosTask(const char *taskName,
		void (*taskFunction)(void *),
		uint16_t stackSize,
		UBaseType_t priority,
		void *parameters)
{
	this->m_taskFunction = taskFunction;
	this->name = taskName;
	this->m_stackSize = stackSize;
	this->m_priority = priority;
	this->m_parameters = parameters;
}

void create()
{
	BaseType_t xReturned;

	xReturned = xTaskCreate(this->m_taskFunction, this->name, this->m_stackSize, this->m_parameters, this->m_priority, &m_handle);
	if (xReturned != pdPASS)
	{
		errorHandler(__FILE__, __LINE__, ERROR_FATAL, "Unable to create Task\n");
	}
}
void suspend()
{

}
void resume()
{

}
void delay(const TickType_t xTicksToDelay)
{

}
